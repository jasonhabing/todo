
<div class="container">
  <% if current_user %>
<h1>Todo List</h1>

<%= render 'form' %>

  <h1>Next</h1>
<table class="table">


<% @tasks.each do |task| %>
  <tr>
    <td><%= task.description %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Remove', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>

</table>


</div>

<div class="container">
  <h1>Waiting</h1>
<table class="table">


<% @taskwaiting.each do |task| %>
  <tr>
    <td><%= task.description %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Remove', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_task_path %>
</div>

<% else %>
<p>Sign up for an account or Log In to see all of your tasks.</p>
<% end %>